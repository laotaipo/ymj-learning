{
	"name": "yangmingda",
	"version": "1.0.0",
	"description": "",
	"main": "app/main/index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start:main": "electron .",
		"start:render": "cd app/renderer/src/main && npm start",
		"start": "concurrently \"npm run start:render\" \"wait-on http://localhost:3000 && npm run start:main\" ",
		"build": "cd app/render/src/main && npm run build"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@electron/remote": "^2.0.8",
		"about-window": "^1.15.2",
		"electron-is-dev": "^2.0.0"
	},
	"devDependencies": {
		"concurrently": "^7.2.2",
		"cross-env": "^7.0.3",
		"electron": "^19.0.6",
		"electron-builder": "^23.1.0",
		"electron-builder-squirrel-windows": "^23.2.0",
		"fs-extra": "^10.1.0",
		"wait-on": "^6.0.1"
	},
	"build": {
		"appId": "com.yang.ming",
		"productName": "yangmingda",
		"files": "app",
		"asar": false,
		"extraFiles": [
			"app/renderer/**/src"
		],
		"directories": {
			"buildResources": "resource",
			"output": "release"
		},
		"copyright": "Copyright Â© 2020 dragon",
		"mac": {
			"target": [
				"dmg",
				"zip"
			],
			"icon": "resources/icon.icns"
		},
		"dmg": {
			"background": "resources/background.png",
			"window": {
				"width": 540,
				"height": 380
			},
			"contents": [
				{
					"x": 410,
					"y": 180,
					"type": "link",
					"path": "/Applications"
				},
				{
					"x": 130,
					"y": 180,
					"type": "file"
				}
			],
			"iconSize": 128
		},
		"win": {
			"icon": "resources/icon.ico",
			"target": [
				"squirrel",
				"nsis"
			]
		},
		"nsis": {
			"oneClick": false,
			"language": "2052",
			"perMachine": true,
			"allowToChangeInstallationDirectory": true
		},
		"squirrelWindows": {
			"iconUrl": "https://raw.githubusercontent.com/dengyaolong/geektime-electron/master/img/icon.ico"
		}
	}
}
